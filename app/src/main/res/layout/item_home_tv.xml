<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">
    <!--周边视频-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <!--整体宽度-->
    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/ll_item"
        android:layout_width="170dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_image_w_h"
            android:layout_width="match_parent"
            android:layout_height="94dp">
            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="match_parent"
                android:src="@mipmap/image_def"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_new_ji"
                android:layout_width="match_parent"
                android:text="更新至12集"
                android:padding="5dp"
                android:textSize="12sp"
                android:background="@mipmap/home_video_bg"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <!--文字区块-->
        <LinearLayout
            android:padding="2dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_video_name"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:maxLines="2"
                    android:layout_marginLeft="2dp"
                    android:ellipsize="end"
                    android:textColor="@color/common_textcolor_black_33"
                    android:text="你好，对方辩友"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/common_textcolor_gray_99"
                    android:text="“唇枪舌剑”点燃青春"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#ff7d00"
                android:text="9.0"
                android:layout_alignParentRight="true"
                android:textStyle="italic"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp" />



</LinearLayout>