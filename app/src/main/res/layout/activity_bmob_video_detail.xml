<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".BmobVideoDetailActivity">

    <org.yczbj.ycvideoplayerlib.player.VideoPlayer
        android:id="@+id/nice_video_player"
        android:layout_width="match_parent"
        android:layout_height="240dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_ad"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:src="@mipmap/test_ad"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <!--视频详情-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_video_name"
                        android:layout_width="wrap_content"
                        android:text="傀儡姬"
                        android:textStyle="bold"
                        android:textColor="@color/common_textcolor_black_33"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_score"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:textStyle="italic"
                        android:textColor="#FC7204"
                        android:text="9.8"
                        android:layout_marginRight="2dp"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="分"
                        android:textColor="#FC7204"
                        android:textSize="12sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_type_area"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_direct"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:text="导演：冯小刚"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:text="地区：大陆"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_direct"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_style"
                    android:layout_width="wrap_content"
                    android:text="类型：战争 历史 犯罪 黑帮"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_leading_role"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="主演：季晨,鹤男,王珞嘉,张冬,冯俊杰,刘永刚,戴明,脑门额尔德尼,韩梦武"
                    android:id="@+id/tv_leading_role"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_detail"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="师师倾慕师兄飞赫，二人研制“十全傀儡人”时飞赫失踪，傀儡人也消失不见。师师在城主府邂逅一男，肩上有飞赫专属图案，可惜未见其容。携带图案的是飞赫所造的十全傀儡。后被权臣姜相邦利用，代替真城主姬夜辰统治王城。他生来视物无色，却唯独看师师是彩色，十分新奇。为寻找飞赫线索，师师夜闯城主府，错将姬夜辰当成城主贴身护卫，强行结拜以套取城主信息。二人被卷入数起怪异事件，相互扶持中，一来二去竟产生了好感。姬夜辰因师师有了心跳，看见了色彩，也对禁傀真相发生了质疑。相邦因此急于除掉师师。师师以为城主杀死师兄，前往刺杀，却发现城主就是“大护卫”。相邦前来追杀，二人意外跌入地宫，却惊见飞赫和真城主羁留其中。几人的感情和命运，面临意想不到的逆转和挑战。"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="15dp"
                android:background="@color/divider_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>